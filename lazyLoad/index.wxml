<view class="lazy-load-wrapper border-radius">
  <image
    class="lazy-load border-radius"
    style="width: {{ width }}rpx; height: {{ height }}rpx"
    data-src="{{ src }}"
    mode="{{ mode }}"
    src="{{ url }}"
    bindload="imageLoad"
    bindtap="handleTap"
    binderror="handleError"
  ></image>
  <slot></slot>
</view>